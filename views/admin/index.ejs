<% include partials/header %>

    <div class="login">
        <div class="content">
            <div class="head">
                <h3>Hoki Poki HR</h3>
                <small>
                    Welcome to the Hoki Poki Admin page. <br>
                    Please use your username and password to login.
                </small>
            </div>
            <form>
                <div class="form-group">
                    <label for="inputUsername">Username</label>
                    <input type="email" class="form-control" id="inputUsername" placeholder="Enter username">
